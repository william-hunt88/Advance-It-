<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{user.username}} from {{user.band_name}} on {{format_date created_at}} at: {{comment_time created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>